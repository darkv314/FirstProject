<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/colorPrimary"
    tools:context=".MainActivity">

    <LinearLayout
        android:id="@+id/topBar"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:background="@color/colorPrimaryDark"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/menuBarButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="15dp"
            android:paddingBottom="15dp"
            app:srcCompat="@drawable/menu" />

        <ImageView
            android:layout_marginStart="56dp"
            android:id="@+id/historyButton"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingTop="15dp"
            android:paddingBottom="15dp"
            app:srcCompat="@drawable/clock" />

        <ImageView
            android:layout_marginStart="60dp"
            android:id="@+id/filesButton"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingTop="15dp"
            android:paddingBottom="15dp"
            app:srcCompat="@drawable/folder" />

        <ImageView
            android:id="@+id/searchButton"
            android:layout_marginStart="56dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingTop="15dp"
            android:paddingBottom="15dp"
            app:srcCompat="@drawable/search" />

    </LinearLayout>

    <GridLayout
        android:id="@+id/midBar"
        android:layout_width="match_parent"
        android:layout_height="196dp"
        android:columnCount="4">

        <ImageView
            android:id="@+id/imageButton"
            android:layout_width="wrap_content"
            android:layout_height="98dp"
            android:paddingTop="25dp"
            android:paddingBottom="25dp"
            android:src="@drawable/gallery">

        </ImageView>

        <ImageView
            android:id="@+id/videoButton"
            android:layout_width="wrap_content"
            android:layout_height="98dp"
            android:paddingTop="15dp"
            android:paddingBottom="15dp"
            android:src="@drawable/play">

        </ImageView>

        <ImageView
            android:id="@+id/docsButton"
            android:layout_width="wrap_content"
            android:layout_height="98dp"
            android:paddingTop="30dp"
            android:paddingBottom="30dp"
            android:src="@drawable/files">

        </ImageView>

        <ImageView
            android:id="@+id/musicButton"
            android:layout_width="wrap_content"
            android:layout_height="98dp"
            android:paddingTop="25dp"
            android:paddingBottom="25dp"
            android:src="@drawable/music">

        </ImageView>

        <ImageView
            android:id="@+id/apkButton"
            android:layout_width="wrap_content"
            android:layout_height="98dp"
            android:paddingTop="20dp"
            android:paddingBottom="20dp"
            android:src="@drawable/apk_file">

        </ImageView>

        <ImageView
            android:id="@+id/downloadButton"
            android:layout_width="wrap_content"
            android:layout_height="98dp"
            android:paddingTop="20dp"
            android:paddingBottom="20dp"
            android:src="@drawable/download">

        </ImageView>

        <ImageView
            android:id="@+id/moreButton"
            android:layout_width="wrap_content"
            android:layout_height="98dp"
            android:paddingTop="30dp"
            android:paddingBottom="30dp"
            android:src="@drawable/more">

        </ImageView>

    </GridLayout>

    <GridLayout
        android:id="@+id/preview"
        android:layout_width="match_parent"
        android:layout_height="440dp"
        android:columnCount="1">

        <LinearLayout
            android:id="@+id/viewScreenshots"
            android:background="@color/colorAccent"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:orientation="horizontal">

            <ImageView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_marginStart="10dp"
                android:src="@drawable/mini_gallery">

            </ImageView>

            <TextView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_gravity="center"
                android:text="Screenshots">

            </TextView>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/images1"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:orientation="horizontal">

            <ImageView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:padding="20dp"
                android:src="@drawable/image_preview">

            </ImageView>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="20dp"
                android:src="@drawable/image_preview">

            </ImageView>

        </LinearLayout>

        <LinearLayout
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:background="@color/colorAccent"
            android:orientation="horizontal">

            <ImageView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_marginStart="10dp"
                android:src="@drawable/mini_play">

            </ImageView>

            <TextView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_gravity="center"
                android:text="Movies">

            </TextView>

        </LinearLayout>

        <LinearLayout
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:orientation="horizontal">

            <ImageView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:padding="20dp"
                android:src="@drawable/movie">

            </ImageView>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="20dp"
                android:src="@drawable/movie">

            </ImageView>

        </LinearLayout>

    </GridLayout>

</LinearLayout>